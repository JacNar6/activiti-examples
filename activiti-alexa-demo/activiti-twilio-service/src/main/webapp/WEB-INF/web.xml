<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee" 
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee 
        http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
    version="3.0">
  <display-name>TwilioMicroService</display-name>
  <servlet>
        <servlet-name>TwilioServlet</servlet-name>
        <servlet-class>com.alfresco.TwilioServlet</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>TwilioServlet</servlet-name>
        <url-pattern>/hello</url-pattern>
        <url-pattern>/handle-key/*</url-pattern>
        <url-pattern>/handle-recording/*</url-pattern>
    </servlet-mapping>
  
</web-app>
